%h4
  = flash[:error]
%h2
  New User
%h1
  User Registration
= form_for @user, url: "create" do |user|
  - if @user.errors.any?
    - @user.errors.full_messages.each do |msg|
      %p{:class => 'error'}
        = p msg

  = user.label :name
  = user.text_field :name
  %br
  = user.label :email
  = user.text_field :email
  %br
  = user.label :password
  = user.text_field :password
  %br
  = user.label :confirm_password
  = user.text_field :password_confirmation
  %br
  .actions
    = user.submit

%br
  already have account? plsase login here
= link_to "Login", login_path
